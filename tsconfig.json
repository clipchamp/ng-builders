{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "declarationDir": "typings",
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "files": ["src/stryker/stryker.builder.ts", "src/gcloud/gcloud.builder.ts"]
}